{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["esnext"],
        "moduleResolution": "node",

        "baseUrl": ".",
        "outDir": "./build",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,

        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "#/*": ["./src/modules/*"],
            "@inti5/*": ["./src/core/inti5/*"],
            "@inti5/app-backend/*": ["./src/core/inti5/app-backend/*"],
            "*": [
                "./src/*",
                "./tests/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./tests/**/*.ts"
    ],
    "exclude": [
        "**/Ui/**",
        "node_modules"
    ]
}
