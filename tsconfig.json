{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["esnext"],
        "moduleResolution": "node",

        "baseUrl": ".",
        "outDir": "./build",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,

        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "#/*": ["./src/modules/*"],
            "@inti5/*": ["./src/core/*"],
            "etc/*": ["./etc/*"],
            "migrations/*": ["./migrations/*"],
            "modules/*": ["./modules/*"]
        }
    },
    "include": [
        "./**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/tests/**/*.ts"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
